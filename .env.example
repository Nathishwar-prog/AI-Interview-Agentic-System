# =============================================================================
# AGENTIC AI INTERVIEW PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
# =============================================================================

# =============================================================================
# REQUIRED - OpenAI Configuration
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# REQUIRED - Database Configuration
# =============================================================================
# For local development (SQLite - no setup needed):
DATABASE_URL=sqlite:///./interview.db

# For production (PostgreSQL):
# DATABASE_URL=postgresql://username:password@localhost:5432/interview_db

# =============================================================================
# OPTIONAL - Memory & Storage Configuration
# =============================================================================
# Path for FAISS vector index storage
FAISS_INDEX_PATH=./faiss_index

# =============================================================================
# OPTIONAL - Application Configuration
# =============================================================================
# Backend server host and port
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend development server port
FRONTEND_PORT=5173

# =============================================================================
# OPTIONAL - Interview Configuration
# =============================================================================
# Default interview duration in minutes
DEFAULT_INTERVIEW_DURATION=35

# Maximum number of questions per interview
MAX_QUESTIONS=8

# =============================================================================
# OPTIONAL - Logging & Debugging
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (provides detailed error messages)
DEBUG=False

# =============================================================================
# NOTES
# =============================================================================
# 1. The OPENAI_API_KEY is REQUIRED for the application to function
# 2. SQLite is recommended for local development (no additional setup)
# 3. PostgreSQL is recommended for production deployments
# 4. FAISS index will be automatically created on first use
# =============================================================================
